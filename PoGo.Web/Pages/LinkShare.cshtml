@page
@model LinkShareModel

<div class="alert alert-info" role="alert">
    Našel jsi novou stránku s něčím co tady není? Ozvi se nám!
</div>

<div class="row">
    <div class="card-group">
        @foreach (var item in Model.Links)
        {
            <div class="col-xl-4 col-lg-6 col-md-6 col-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title">@item.Title</h4>
                        <p class="card-text">@item.Description</p>
                        <a href="@item.Url" target="_blank" class="btn btn-primary pull-right"><i class="fa fa-external-link" aria-hidden="true"></i> Přejít</a>
                        <small class="text-muted">Přidáno @item.DateAdded.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>